{
  "name": "yourtown-delivery-frontend",
  "version": "1.0.0",
  "description": "Yourtown Delivery - Full-stack grocery delivery platform",
  "keywords": [
    "delivery",
    "grocery",
    "e-commerce",
    "food-delivery"
  ],
  "author": "Yourtown Delivery Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mrcodin/yourtown-delivery.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build:all",
    "build:css": "node build-scripts/minify-css.js",
    "build:js": "node build-scripts/minify-js.js",
    "build:images": "node build-scripts/optimize-images.js",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "analyze": "node build-scripts/analyze-bundle.js",
    "budget": "node build-scripts/performance-budget.js",
    "lighthouse": "lighthouse http://localhost:5500 --output html --output-path ./lighthouse-report.html",
    "perf": "npm run build:all && npm run analyze && npm run budget",
    "lint": "eslint *.js server/**/*.js",
    "lint:fix": "eslint *.js server/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "clean": "rm -rf dist/ *.min.js *.min.css",
    "test": "echo 'Tests coming soon' && exit 0",
    "organize": "bash organize-project.sh"
  },
  "devDependencies": {
    "clean-css": "^5.3.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.7.4",
    "terser": "^5.44.1"
  }
}
